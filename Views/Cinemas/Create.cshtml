@model ETicketsStore.Models.Cinema

@{
    ViewData["Title"] = "Create Cinema";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px;" id="LogoPreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="reset" value="Reset" class="btn btn-danger text-white mr-2 float-right" />
                        <input type="submit" value="Create" class="btn btn-outline-primary mr-2 float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById("LogoPreview");
            output.src = $("#ProfilePictureURL").val();

            $("#Logo").change(function () {
                var output = document.getElementById("LogoPreview");
                output.src = $(this).val();

                console.log($(this).val());

                if ($(this).val() == "") {
                    output.src = "";
                }
            });

            $('input[type=reset]').click(function () {
                $("#Logo").val();
                document.getElementById("LogoPreview").src = "";
            })
        });
    </script>
}

